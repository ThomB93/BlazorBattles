@page "/register"
@inject BlazorBattles.Client.Services.IUnitService UnitService
@inject NavigationManager NavigationManager

<h3>Register</h3>

<EditForm Model="@user" OnValidSubmit="HandleRegistration">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label for="email">Email</label>
        <InputText id="email" class="form-control" @bind-Value="@user.Email"></InputText>
        <ValidationMessage For="() => user.Email"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="email">Username</label>
        <InputText id="username" class="form-control" @bind-Value="@user.Username"></InputText>
        <ValidationMessage For="() => user.Username"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="email">Password</label>
        <InputText id="password" class="form-control" @bind-Value="@user.Password" type="password"></InputText>
        <ValidationMessage For="() => user.Password"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="email">Confirm Password</label>
        <InputText id="confirm-password" class="form-control" @bind-Value="@user.ConfirmPassword" type="password"></InputText>
        <ValidationMessage For="() => user.ConfirmPassword"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="email">Bio</label>
        <InputTextArea id="bio" class="form-control" @bind-Value="@user.Bio"></InputTextArea>
    </div>
    <div class="form-group">
        <label for="email">Bananas</label>
        <InputNumber id="bananas" class="form-control" @bind-Value="@user.Bananas"></InputNumber>
        <ValidationMessage For="() => user.Bananas"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="email">Start Unit</label>
        <InputSelect id="start-unit" class="form-control" @bind-Value="@user.StartUnitId">
            @foreach (var unit in UnitService.Units)
            {
                <option value="@unit.Id.ToString()">@unit.Title</option>
            }
        </InputSelect>
    </div>
    <div class="form-group">
        <label for="email">Date of Birth</label>
        <InputDate id="date-of-birth" class="form-control" @bind-Value="@user.DateOfBirth"></InputDate>
    </div>
    <div class="form-group">
        <InputCheckbox id="is-confirmed" class="form-check-input" @bind-Value="@user.IsConfirmed"></InputCheckbox>
        <label for="email">Is Confirmed?</label>
        <ValidationMessage For="() => user.IsConfirmed"></ValidationMessage>
    </div>
    <button class="btn btn-outline-primary" type="submit">Register</button>

</EditForm>

@code {
    UserRegister user = new UserRegister();

    public void HandleRegistration()
    {
        NavigationManager.NavigateTo("login");
    }
}
